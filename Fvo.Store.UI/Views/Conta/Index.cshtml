@model Fvo.Store.UI.ViewModel.LoginVM
@{
    ViewBag.Title = "Login";
}

<h2>@ViewBag.Title</h2>
<div class="row">
    <form method="post" class="col-md-6 col-sm-12">
        <div class="form-group">
            <label>E-mail</label>
            @Html.TextBoxFor(model => model.Email, new { @class = "form-control", autofocus = "" })
            @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
        </div>

        <div class="form-group">
            <label>Senha</label>
            @Html.PasswordFor(model => model.Senha, new { @class = "form-control", autofocus = "" })
            @Html.ValidationMessageFor(model => model.Senha, null, new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.CheckBoxFor(model => model.PermanecerLogado, new { @class = "form-check-input" })
            @Html.LabelFor(model => model.PermanecerLogado)
        </div>

        <div class="form-group">
            <button class="btn btn-outline-secondary">
                Salvar
            </button>
            <a class="btn btn-outline-warning" href="@Url.Action("Index", "Home")">Cancelar</a>
        </div>
    </form>
</div>
@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/bootstrap.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}