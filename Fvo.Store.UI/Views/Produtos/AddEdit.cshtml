@model  Fvo.Store.UI.ViewModel.Produtos.AddEdit.ProdutoAddEditVM

@{
    ViewBag.Title = $"{(Model.Id == 0 ? "Adicionar" : "Editar")} Produto";
}
<h2>@ViewBag.Title</h2>

<form action="~/Produtos/AddEdit/@Model.Id" method="post">
    <div class="form-group">
        <label for="txtNome">Nome</label>
        @Html.TextBoxFor(m => m.Nome, new { @class = "form-control", autofocus = "" })
        @Html.ValidationMessageFor(m => m.Nome, null, new { @class = "text-danger" })
    </div>

    <div class="form-group">
        <label for="txtPreco">Preço</label>
        @Html.TextBoxFor(m => m.Preco, new { @class = "form-control", autofocus = "" })
        @Html.ValidationMessageFor(m => m.Preco, null, new { @class = "text-danger" })

    </div>

    <div class="form-group">
        <label for="txtTipo">Tipo</label>
        @Html.DropDownListFor(m => m.TipoDeProdutoId, new SelectList(ViewBag.Tipos, "Id", "Nome"), "Selecione...", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.TipoDeProdutoId, null, new { @class = "text-danger" })

    </div>

    <div class="form-group">
        <label for="txtQtde">Quantidade</label>
        @Html.TextBoxFor(m => m.Qtde, new { @class = "form-control", autofocus = "" })
        @Html.ValidationMessageFor(m => m.Qtde, null, new { @class = "text-danger" })

    </div>

    <div class="form-group mt-1">
        <button class="btn btn-primary">Salvar</button>
        <a href="@Url.Action("Index")" class="btn btn-outline-secondary">Cancelar</a>
    </div>
</form>

@section scripts{
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/bootstrap.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}

